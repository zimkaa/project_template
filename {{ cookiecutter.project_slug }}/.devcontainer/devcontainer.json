{
  "name": "Base container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/neovim-apt-get:1": {},
    "ghcr.io/georgofenbeck/features/lazygit-linuxbinary:1": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/go-task:1":{}
  },
  "customizations": {
    "vscode": {"uri": "file://${localWorkspaceFolder}/.devcontainer/vscode-settings.json"}
  },
  "onCreateCommand": "sudo chsh -s /usr/bin/zsh $USER",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
      "zsh": {
        "path": "/usr/bin/zsh"
      }
    }
  },
  // "forwardPorts": [
  //   8000
  // ],
  "remoteEnv": {
    "REMOTE_CONTAINERS": "true"
  }
}
